{
  "$schema": "https://json-schema.org/draft/07/schema",
  "$id": "https://registry.rustopic.com/schemas/game.schema.json",
  "title": "Game Definition",
  "description": "Schema for game server definitions",
  "type": "object",
  "required": ["name", "author", "desc", "startup", "config", "scripts", "variables"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "author": {
      "type": "string",
      "format": "email"
    },
    "desc": {
      "type": "string",
      "description": "Game description"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of supported features (e.g., steam_disk_space)"
    },
    "images": {
      "type": "object",
      "description": "Docker image mappings",
      "patternProperties": {
        ".*": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "startup": {
      "type": "string",
      "description": "Startup command template with {{VARIABLE}} placeholders"
    },
    "config": {
      "type": "object",
      "required": ["files", "startup", "logs", "stop"],
      "properties": {
        "files": {
          "type": "string"
        },
        "startup": {
          "oneOf": [
            { "type": "string" },
            { "type": "object" }
          ]
        },
        "logs": {
          "type": "string"
        },
        "stop": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "scripts": {
      "type": "object",
      "required": ["installer"],
      "properties": {
        "installer": {
          "type": "object",
          "required": ["code", "image", "entry"],
          "properties": {
            "code": {
              "type": "string",
              "description": "Installation script code"
            },
            "image": {
              "type": "string",
              "description": "Docker image for installer container"
            },
            "entry": {
              "type": "string",
              "description": "Entrypoint command (e.g., bash)"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "variables": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/variable"
      },
      "minItems": 1
    }
  },
  "$defs": {
    "variable": {
      "type": "object",
      "required": ["name", "desc", "env", "def", "rules"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "desc": {
          "type": "string",
          "description": "Variable description"
        },
        "env": {
          "type": "string",
          "pattern": "^[A-Z_][A-Z0-9_]*$",
          "description": "Environment variable name"
        },
        "def": {
          "description": "Default value (can be string, number, or empty string)"
        },
        "rules": {
          "type": "string",
          "description": "Validation rules (Laravel-style)"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

