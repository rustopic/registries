{
  "$schema": "https://json-schema.org/draft/07/schema",
  "$id": "https://registry.rustopic.com/schemas/framework.schema.json",
  "title": "Framework Definition",
  "description": "Schema for modding framework definitions",
  "type": "object",
  "required": ["id", "name", "version", "gameId"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "gameId": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "description": {
      "type": "string"
    },
    "installation": {
      "type": "object",
      "additionalProperties": true
    },
    "compatibility": {
      "type": "object",
      "additionalProperties": true
    },
    "capabilities": {
      "type": "object",
      "additionalProperties": true
    },
    "paths": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "commands": {
      "type": "object",
      "additionalProperties": true
    },
    "config": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}

