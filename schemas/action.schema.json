{
  "$schema": "https://json-schema.org/draft/07/schema",
  "$id": "https://registry.rustopic.com/schemas/action.schema.json",
  "title": "Maintenance Action",
  "description": "Schema for maintenance actions (e.g., wipe)",
  "type": "object",
  "required": ["id", "enabled"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-_]+$"
    },
    "enabled": {
      "type": "boolean"
    },
    "ui": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": ["destructive", "maintenance", "disabled"]
        },
        "icon": {
          "type": "string"
        },
        "color": {
          "type": "string",
          "enum": ["danger", "warning", "info", "success"]
        },
        "hidden": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    },
    "form": {
      "type": "object",
      "properties": {
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["key", "type"],
            "properties": {
              "key": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["boolean", "number", "string", "enum", "array"]
              },
              "label": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "default": {},
              "required": {
                "type": "boolean"
              },
              "optional": {
                "type": "boolean"
              },
              "min": {
                "type": "number"
              },
              "max": {
                "type": "number"
              },
              "step": {
                "type": "number"
              },
              "options": {
                "type": "array"
              },
              "rules": {
                "type": "string"
              },
              "itemType": {
                "type": "string"
              },
              "conditional": {
                "type": "object"
              },
              "validation": {
                "type": "array"
              }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "wipeProfiles": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9-_]+$": {
          "type": "object",
          "properties": {
            "delete": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "exclude": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "confirmation": {
      "type": "object",
      "properties": {
        "required": {
          "type": "boolean"
        },
        "message": {
          "type": "string"
        },
        "destructive": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}

