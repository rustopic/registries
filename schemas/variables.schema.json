{
  "$schema": "https://json-schema.org/draft/07/schema",
  "$id": "https://registry.rustopic.com/schemas/variables.schema.json",
  "title": "Variable Definition",
  "description": "Schema for variable definitions used in game configurations",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["name", "desc", "env", "def", "rules"],
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1,
        "description": "Variable display name"
      },
      "desc": {
        "type": "string",
        "minLength": 1,
        "description": "Variable description"
      },
      "env": {
        "type": "string",
        "pattern": "^[A-Z_][A-Z0-9_]*$",
        "description": "Environment variable name (uppercase, underscores)"
      },
      "def": {
        "description": "Default value (type depends on variable type - string, number, or empty string)"
      },
      "rules": {
        "type": "string",
        "description": "Validation rules (Laravel-style, e.g., required|string|max:60)"
      }
    },
    "additionalProperties": false
  }
}
